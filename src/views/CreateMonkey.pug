extends layout.pug
block content
    .row
      .offset-sm-2.col-sm-8
            h1.display-3  Create Monkey !
            - var _url = '/monkeys' 
            form(method='POST' action=_url)
                div.form-group
                    label(for='name') Name :
                    input#name.form-control(type='text', placeholder='Name of Monkey' name='name')
                div.form-group
                    label(for='age') Age :
                    input#age.form-control(type="number", placeholder='Age of Monkey' name='age')
                div.form-group
                    label(for='breed') Breed :
                    input#breed.form-control(type='text', placeholder='Breed of Monkey' name='breed')
                button.btn.btn-success(type='submit') Submit