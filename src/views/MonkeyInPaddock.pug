extends layout.pug
block content
    .row
      .offset-sm-2.col-sm-8
            h1.display-3  Monkey ID : #{id_singe}
            table.table.table-striped
                thead
                    tr
                        th.table-active Monkeys
                         th Capacity
                         th Link Paddock with Monkey

                tbody
                each paddock in paddocks 
                    tr
                         td 
                            - var _url04 = '/paddocks/' + paddock.id
                            a(href=_url04) #{paddock.name}
                         td #{paddock.capacity}
                         td 
                            - var _url03 = '/addmonkeyinpaddock/' + id_singe + '/' + paddock.id
                            a.btn.btn-info(href=_url03, role='button') Link to this Paddock 