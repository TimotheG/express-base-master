extends layout.pug
block content
   .row
      .offset-sm-4.col-sm-8
            h1.display-3  View Monkey
            .card.border-info.mb-3(style='width:400px; height:270px')
                .card-header.text-info(style='font-size:30px; text-align:center; text-transform:uppercase;') #{monkey.name}
                .card-body.text-info
                   h4.card-title(style='text-decoration:underline;')  Informations :
                   p.card-text Age : #{monkey.age}
                   p.card-text Breed : #{monkey.breed}
                   - var _url01 = '/updatemonkey/' + monkey.id
                   - var _url03 = '/monkeys/delete/' + monkey.id
                   a.btn.btn-primary(href=_url01) Update
                   a.btn.btn-danger(href=_url03)(style='margin-left:10px') Delete
           

